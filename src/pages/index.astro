---
import { Image } from 'astro:assets'
import BaseLayout from '../layouts/BaseLayout.astro'
import SkillIcon from '../components/SkillIcon.astro'
import homeData from '../data/home.json'
import headshot from '../assets/headshot.jpeg'

const { hero, skills, selectedProjects, softClose } = homeData
---

<BaseLayout title="Chris Lacey | Senior Software Engineer">
  <div class="min-h-screen bg-[#0F0F16] text-white selection:bg-teal-400/30 selection:text-teal-200">
    <!-- Background ambient glow -->
    <div class="fixed inset-0 pointer-events-none overflow-hidden" aria-hidden="true" transition:persist="bg-glow">
      <div class="absolute -top-40 -left-40 h-[500px] w-[500px] rounded-full bg-teal-500/10 blur-[120px]"></div>
      <div class="absolute top-1/2 right-0 h-[600px] w-[600px] rounded-full bg-purple-500/5 blur-[120px]"></div>
    </div>

    <div class="relative mx-auto max-w-7xl px-6 py-12 md:px-12 md:py-20 lg:py-24 space-y-20">
      <!-- Hidden back-link anchor for view transitions -->
      <div class="hidden" transition:name="back-link" aria-hidden="true"></div>

      <!-- Hero Section -->
      <section class="flex flex-col items-center gap-10 md:flex-row md:items-start md:gap-16 lg:gap-20 pb-8">
        <!-- Left Column: Large Avatar -->
        <div class="shrink-0">
          <div class="relative">
            <div class="absolute inset-0 -z-10 bg-teal-400/20 blur-[40px] rounded-full" aria-hidden="true"></div>
            <Image
              src={headshot}
              alt={`Headshot of ${hero.name}`}
              class="h-48 w-48 rounded-full border-4 border-teal-400 object-cover shadow-2xl md:h-64 md:w-64 lg:h-72 lg:w-72"
              width={288}
              height={288}
              loading="eager"
            />
          </div>
        </div>

        <!-- Right Column: Text Content -->
        <div class="flex flex-col text-center md:text-left pt-4">
          <h1 class="text-4xl font-bold tracking-tight text-white md:text-5xl lg:text-6xl" transition:name="page-title">
            {hero.name}
          </h1>
          <h2 class="mt-3 text-2xl font-medium text-teal-400 bg-linear-to-r from-teal-400 to-teal-200 bg-clip-text text-transparent md:text-3xl">
            {hero.title}
          </h2>

          <!-- Tagline -->
          <div class="mt-6 max-w-2xl space-y-4 text-lg leading-relaxed text-[#A0A0B0] md:text-xl">
            <p>{hero.tagline}</p>
          </div>

          <!-- CTA Buttons -->
          <div class="mt-8 flex flex-wrap justify-center gap-4 md:justify-start">
            {hero.ctas.map((cta) => (
              <a
                href={cta.href}
                download={cta.download ? '' : undefined}
                class:list={[
                  'inline-flex items-center justify-center rounded-lg px-8 py-3 text-base font-semibold transition-all duration-300',
                  cta.variant === 'primary'
                    ? 'bg-teal-400 text-[#0F0F16] hover:bg-teal-300 hover:shadow-[0_0_30px_rgba(45,212,191,0.3)] hover:-translate-y-1'
                    : 'border border-white/10 bg-white/5 text-white hover:border-teal-400/50 hover:bg-white/10 hover:text-teal-400 hover:-translate-y-1'
                ]}
              >
                {cta.label}
              </a>
            ))}
          </div>
        </div>
      </section>

      <!-- Skills Section -->
      <section class="space-y-5" aria-labelledby="skills-heading">
        <h2 id="skills-heading" class="text-lg font-semibold text-white">Skills & Expertise</h2>

        <div class="flex flex-wrap gap-3">
          {skills.map((skill) => (
            <div class="flex flex-col items-center gap-2">
              <div class="flex h-16 w-16 items-center justify-center rounded-xl bg-[#1a1a2e] border border-teal-400/30 shadow-[0_0_15px_rgba(45,212,191,0.1)]">
                <SkillIcon icon={skill.icon} name={skill.name} />
              </div>
              <span class="text-xs text-[#A0A0B0]">
                {skill.name}
              </span>
            </div>
          ))}
        </div>
      </section>

      <!-- Selected Projects Section -->
      <div class="space-y-12">
        <section class="space-y-6" aria-labelledby="projects-heading">
          <div class="flex items-center justify-between">
            <h2 id="projects-heading" class="text-xl font-bold text-white">Selected Projects</h2>
            <a
              href="/projects"
              class="group flex items-center gap-2 text-sm font-medium text-teal-400 hover:text-teal-300"
            >
              View all projects
              <svg class="h-4 w-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>

          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {selectedProjects.map((project) => (
              <a
                href={project.href}
                class="group relative overflow-hidden rounded-2xl border-2 border-teal-400/40 bg-[#1a1a2e] p-5 transition-all duration-300 shadow-[0_0_20px_rgba(45,212,191,0.15)] hover:shadow-[0_0_30px_rgba(45,212,191,0.25)] hover:border-teal-400/60 hover:-translate-y-1"
              >
                <h3 class="text-lg font-bold text-white group-hover:text-teal-400 transition-colors">
                  {project.title}
                </h3>
                <p class="mt-3 text-sm leading-relaxed text-[#A0A0B0]">
                  {project.description}
                </p>

                <div class="mt-auto pt-5">
                  <div class="inline-flex items-center gap-2 text-sm font-semibold text-teal-400 transition-colors">
                    Read Case Study
                    <svg class="h-4 w-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>

        <!-- Soft Close -->
        <div class="pt-8 border-t border-white/5">
          <p class="text-base text-[#A0A0B0]/60 md:text-lg">
            {softClose}
          </p>
        </div>
      </div>

    </div>
  </div>
</BaseLayout>
