---
import { Image } from 'astro:assets'
import headshot from '../assets/headshot.jpeg'
import AnimatedBackground from '../components/AnimatedBackground.astro'
import InteractiveSkillIcon from '../components/InteractiveSkillIcon.astro'
import MagneticButton from '../components/MagneticButton.astro'
import ProjectCard from '../components/ProjectCard.astro'
import SectionDivider from '../components/SectionDivider.astro'
import homeData from '../data/home.json'
import BaseLayout from '../layouts/BaseLayout.astro'

const { hero, skills, selectedProjects } = homeData
---

<BaseLayout title="Chris Lacey | Senior Software Engineer">
  <div class="min-h-[calc(100vh-60px)] bg-[#0F0F16] text-white selection:bg-teal-400/30 selection:text-teal-200">
    <AnimatedBackground />

    <div class="relative mx-auto max-w-7xl px-6 py-12 md:px-12 md:py-20 lg:py-24 space-y-20">
      <!-- Hero Section -->
      <section>
        <div class="flex flex-col items-center gap-12 md:flex-row md:items-start md:gap-16 lg:gap-20" transition:name="intro-text">
          <!-- Left Column: Avatar -->
          <div class="shrink-0">
            <div class="headshot-wrapper relative h-48 w-48 md:h-64 md:w-64 lg:h-72 lg:w-72">
              <div class="headshot-border-gradient" aria-hidden="true"></div>
              <Image
                src={headshot}
                alt={`Headshot of ${hero.name}`}
                class="relative h-full w-full rounded-full object-cover shadow-2xl"
                width={288}
                height={288}
                loading="eager"
              />
            </div>
          </div>

          <!-- Right Column: Text Content -->
          <div class="flex flex-col text-center md:text-left pt-4">
            <h1 class="text-4xl font-bold tracking-tight md:text-5xl lg:text-6xl gradient-hero" transition:name="page-title">
              {hero.name}
            </h1>
            <h2 class="text-2xl font-medium text-teal-400/80 md:text-3xl">
              {hero.title}
            </h2>

            <!-- Tagline -->
            <div class="mt-6 max-w-2xl space-y-4 text-lg leading-relaxed text-text-muted md:text-xl">
              <p>{hero.tagline}</p>
            </div>

            <!-- CTA Buttons -->
            <div class="mt-8 flex flex-col gap-4 min-[480px]:flex-row min-[480px]:flex-wrap min-[480px]:justify-center md:justify-start">
              {hero.ctas.map((cta) => (
                <MagneticButton
                  href={cta.href}
                  download={cta.download}
                  variant={cta.variant === 'primary' ? 'primary' : 'secondary'}
                >
                  {cta.label}
                </MagneticButton>
              ))}
            </div>
          </div>
        </div>
      </section>

      <SectionDivider />

      <div class="space-y-12" transition:name="main-content">
        <!-- Skills Section -->
        <section class="space-y-4" aria-labelledby="skills-heading">
          <h2 id="skills-heading" class="text-sm font-semibold tracking-widest uppercase text-teal-400/60 text-center md:text-left">Skills & Expertise</h2>

          <div class="grid grid-cols-[repeat(auto-fill,minmax(5.5rem,1fr))] gap-y-4 justify-items-center md:justify-items-start" data-reveal-group>
            {skills.map((skill, index) => (
              <InteractiveSkillIcon
                icon={skill.icon}
                name={skill.name}
                class="reveal-bounce"
                data-reveal-delay={index * 40}
              />
            ))}
          </div>
        </section>

        <!-- Selected Projects Section -->
        <section class="space-y-6" aria-labelledby="projects-heading">
          <div class="flex items-center justify-between">
            <h2 id="projects-heading" class="text-sm font-semibold tracking-widest uppercase text-teal-400">Selected Projects</h2>
            <a
              href="/projects"
              class="group flex items-center gap-2 text-sm font-medium text-teal-400 hover:text-teal-300"
            >
              View all projects
              <svg class="h-4 w-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>

          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3" data-reveal-group>
            {selectedProjects.map((project, index) => (
              <ProjectCard
                href={`/projects/${project.id}`}
                title={project.title}
                description={project.description}
                class="reveal-scale"
                data-reveal-delay={index * 100}
              />
            ))}
          </div>
        </section>
      </div>

    </div>
  </div>
</BaseLayout>
