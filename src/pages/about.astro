---
import AnimatedBackground from '../components/AnimatedBackground.astro'
import SectionDivider from '../components/SectionDivider.astro'
import BaseLayout from '../layouts/BaseLayout.astro'
import aboutData from '../data/about.json'

const { intro, principles } = aboutData
---

<BaseLayout title="About | Chris Lacey" description="Professional background, approach to building software, and what I'm strong at.">
  <div class="min-h-[calc(100vh-60px)] bg-[#0F0F16] text-white selection:bg-teal-400/30 selection:text-teal-200">
    <AnimatedBackground />

    <div class="relative mx-auto max-w-7xl px-6 py-12 md:px-12 md:py-20 lg:py-24">
      <!-- Page Header -->
      <div class="mb-12">
        <h1 class="text-4xl font-bold md:text-5xl gradient-heading" transition:name="page-title">About</h1>
      </div>

      <!-- Intro -->
      <p class="text-lg leading-relaxed text-text-muted-light max-w-3xl" transition:name="intro-text">
        {intro}
      </p>

      <SectionDivider class="my-12" />

      <!-- How I Work -->
      <section transition:name="main-content">
        <h2 class="text-sm font-semibold uppercase tracking-[0.2em] text-teal-400/70 mb-8">How I Work</h2>

        <div class="grid gap-6 sm:grid-cols-2" data-reveal-group>
          {principles.map((principle, index) => (
            <article
              class="reveal-up group rounded-xl border border-white/[0.04] bg-white/[0.02] p-6 transition-all duration-300 hover:border-white/[0.08] hover:bg-white/[0.04]"
              data-reveal-delay={index * 100}
            >
              <h3 class="text-base font-semibold text-teal-400 mb-3">
                {principle.title}
              </h3>
              <p class="text-sm text-text-muted leading-relaxed">
                {principle.description}
              </p>
            </article>
          ))}
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
