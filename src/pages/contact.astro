---
import BaseLayout from '../layouts/BaseLayout.astro'
import contactData from '../data/contact.json'

const { intro, links } = contactData

const glowStyles = {
  email: {
    border: 'border-teal-400/60',
    shadow: 'shadow-[0_0_30px_rgba(45,212,191,0.3),inset_0_1px_0_rgba(45,212,191,0.1)]',
    iconColor: 'text-teal-400',
    hoverBg: 'hover:bg-teal-400/5',
  },
  linkedin: {
    border: 'border-sky-400/60',
    shadow: 'shadow-[0_0_30px_rgba(56,189,248,0.3),inset_0_1px_0_rgba(56,189,248,0.1)]',
    iconColor: 'text-sky-400',
    hoverBg: 'hover:bg-sky-400/5',
  },
  github: {
    border: 'border-purple-400/60',
    shadow: 'shadow-[0_0_30px_rgba(192,132,252,0.3),inset_0_1px_0_rgba(192,132,252,0.1)]',
    iconColor: 'text-purple-400',
    hoverBg: 'hover:bg-purple-400/5',
  },
}
---

<BaseLayout title="Contact | Chris Lacey" description="Get in touch with Chris Lacey.">
  <div class="min-h-screen bg-[#0F0F16] text-white selection:bg-teal-400/30 selection:text-teal-200">
    <!-- Background ambient glow -->
    <div class="fixed inset-0 pointer-events-none overflow-hidden" transition:persist="bg-glow">
      <div class="absolute -top-40 -left-40 h-[500px] w-[500px] rounded-full bg-teal-500/10 blur-[120px]"></div>
      <div class="absolute top-1/2 right-0 h-[600px] w-[600px] rounded-full bg-purple-500/5 blur-[120px]"></div>
    </div>

    <div class="relative mx-auto max-w-3xl px-6 py-12 md:py-20 lg:py-24">
      <!-- Back Link -->
      <a
        href="/"
        class="group mb-8 inline-flex items-center gap-2 text-sm font-medium text-[#A0A0B0] hover:text-teal-400 transition-colors"
        transition:name="back-link"
      >
        <svg
          class="h-4 w-4 transition-transform duration-200 group-hover:-translate-x-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
        </svg>
        Back to Home
      </a>

      <!-- Page Header -->
      <div class="mb-12">
        <h1 class="text-4xl font-bold text-white md:text-5xl" transition:name="page-title">Contact</h1>
      </div>

      <!-- Intro -->
      <p class="text-lg leading-relaxed text-[#C0C0C8] mb-12">
        {intro}
      </p>

      <!-- Contact Links -->
      <div class="space-y-6">
        {links.map((link) => {
          const glow = glowStyles[link.icon as keyof typeof glowStyles]
          return (
            <a
              href={link.href}
              target={link.icon !== 'email' ? '_blank' : undefined}
              rel={link.icon !== 'email' ? 'noopener noreferrer' : undefined}
              class={`group flex items-center gap-5 rounded-2xl border-2 bg-[#1a1a2e] p-5 transition-all duration-300 ${glow.border} ${glow.shadow} ${glow.hoverBg}`}
            >
              <div class={`flex h-12 w-12 items-center justify-center ${glow.iconColor}`}>
                {link.icon === 'email' && (
                  <svg class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                  </svg>
                )}
                {link.icon === 'linkedin' && (
                  <svg class="h-8 w-8" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {link.icon === 'github' && (
                  <svg class="h-8 w-8" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                )}
              </div>
              <span class="text-xl font-semibold text-white">
                {link.label}
              </span>
              <svg
                class={`ml-auto h-6 w-6 ${glow.iconColor} transition-transform duration-200 group-hover:translate-x-1`}
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          )
        })}
      </div>
    </div>
  </div>
</BaseLayout>
