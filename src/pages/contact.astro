---
import AnimatedBackground from '../components/AnimatedBackground.astro'
import ContactCard from '../components/ContactCard.astro'
import SectionDivider from '../components/SectionDivider.astro'
import BaseLayout from '../layouts/BaseLayout.astro'
import contactData from '../data/contact.json'

const { intro, links } = contactData
---

<BaseLayout title="Contact | Chris Lacey" description="Get in touch with Chris Lacey.">
  <div class="min-h-[calc(100vh-60px)] bg-[#0F0F16] text-white selection:bg-teal-400/30 selection:text-teal-200">
    <AnimatedBackground />

    <div class="relative mx-auto max-w-7xl px-6 py-12 md:px-12 md:py-20 lg:py-24">
      <!-- Page Header -->
      <div class="mb-12">
        <h1 class="text-4xl font-bold md:text-5xl gradient-heading" transition:name="page-title">Contact</h1>
      </div>

      <!-- Intro -->
      <p class="reveal-blur text-lg leading-relaxed text-[#C0C0C8] max-w-3xl" transition:name="intro-text">
        {intro}
      </p>

      <SectionDivider class="my-12" />

      <!-- Contact Links -->
      <section transition:name="main-content">
        <h2 class="text-sm font-semibold uppercase tracking-[0.2em] text-teal-400/70 mb-8">Get in Touch</h2>

        <div class="grid gap-6 sm:grid-cols-3">
          {links.map((link, index) => (
            <ContactCard
              href={link.href}
              label={link.label}
              icon={link.icon as 'email' | 'linkedin' | 'github'}
              class="reveal-up"
              data-reveal-delay={index * 100}
            />
          ))}
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
