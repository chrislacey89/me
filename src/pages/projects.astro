---
import AnimatedBackground from '../components/AnimatedBackground.astro'
import ProjectCard from '../components/ProjectCard.astro'
import SectionDivider from '../components/SectionDivider.astro'
import BaseLayout from '../layouts/BaseLayout.astro'
import projectsData from '../data/projects.json'

const { projects } = projectsData
---

<BaseLayout title="Projects | Chris Lacey" description="Case studies showcasing technical work with context on architecture decisions and tradeoffs.">
  <div class="min-h-[calc(100vh-60px)] bg-[#0F0F16] text-white selection:bg-teal-400/30 selection:text-teal-200">
    <AnimatedBackground />

    <div class="relative mx-auto max-w-7xl px-6 py-12 md:px-12 md:py-20 lg:py-24">
      <!-- Page Header -->
      <div>
        <h1 class="text-4xl font-bold md:text-5xl gradient-heading" transition:name="page-title">Projects</h1>
        <p class="mt-4 text-lg text-[#A0A0B0]" transition:name="intro-text">
          Case studies showcasing technical work with context on architecture decisions and tradeoffs.
        </p>
      </div>

      <SectionDivider class="my-12" />

      <!-- Projects Grid -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3" transition:name="main-content" data-reveal-group>
        {projects.map((project, index) => (
          <ProjectCard
            href={project.href || '#'}
            title={project.title}
            description={project.description}
            comingSoon={true}
            class="reveal-scale"
            data-reveal-delay={index * 100}
          />
        ))}
      </div>
    </div>
  </div>
</BaseLayout>
